{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "$lms-Drco-code/app/src/main/out",
                "$lms-Drco-code/app/src/main/java/org/example/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "$lms-Drco-code/app/src/main/out",
                "org.example.App"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "build"
        }
    ]
}
